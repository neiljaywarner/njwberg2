<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.spiritflightapps.berg"
    android:versionCode="2"
    android:versionName="0.3" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

  <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.spiritflightapps.berg.MainActivity"
            android:label="@string/app_name" >
            </activity>
            
          
        <activity
            android:name=".AssessmentListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AssessmentActivity"
            android:windowSoftInputMode="stateVisible|adjustResize" >
        </activity>

       
        
        <provider
      android:name="com.spiritflightapps.berg.contentprovider.MyContentProvider"
      android:authorities="com.spritflightapps.berg.contentprovider.MyToDoContentProvider" >
   </provider>
    </application>
</manifest>
