                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    android:inputType="number"
                    android:tag="14"

                    />


                <TextView
                    android:id="@+id/textViewTotalV2"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:text="___"
                    android:textAppearance="?android:attr/textAppearanceLarge" />


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</ScrollView>