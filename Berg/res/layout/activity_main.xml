                />

            <EditText
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:tag="9"
                android:id="@+id/editTextQ9"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
