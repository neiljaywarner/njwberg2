                android:contentDescription="Instructions"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/buttonQ10"
                />


            <TextView
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:id="@+id/textViewQ10"
                android:tag="Q10"
                android:text="10.STAND-LOOK BEHIND SHOULDERS"
                />

            <EditText
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:tag="10"
                android:id="@+id/editTextQ10"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent">

            <ImageButton
                android:layout_gravity="center_vertical"
                android:src="@android:drawable/ic_dialog_info"
                android:contentDescription="Instructions"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/buttonQ11"
                />

            <TextView
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:id="@+id/textViewQ11"
                android:tag="Q11"
                android:text="11.TURN 360 DEGREES"
                />

            <EditText
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:tag="11"
                android:id="@+id/editTextQ11"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent">

            <ImageButton
                android:layout_gravity="center_vertical"
                android:src="@android:drawable/ic_dialog_info"
                android:contentDescription="Instructions"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/buttonQ12"
                />


            <TextView
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:id="@+id/textViewQ1"
                android:tag="Q12"
                android:text="12.PLACE ALT FOOT ON STEP WHILE UNSUPPORTED"
                />

            <EditText
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:tag="12"
                android:id="@+id/editTextQ12"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent">

            <ImageButton
                android:layout_gravity="center_vertical"
                android:src="@android:drawable/ic_dialog_info"
                android:contentDescription="Instructions"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/buttonQ13"
                />


            <TextView
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:id="@+id/textViewQ13"
                android:tag="Q13"
                android:text="13.STANDING UNSUPPORTED ONE FOOT IN FRONT"
                />

            <EditText
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:tag="13"
                android:id="@+id/editTextQ13"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent">

            <ImageButton
                android:layout_gravity="center_vertical"
                android:src="@android:drawable/ic_dialog_info"
                android:contentDescription="Instructions"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/buttonQ14"
                />


            <TextView
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:id="@+id/textViewQ14"
                android:tag="Q14"
                android:text="14.STANDING ON ONE LEG"
                />

            <EditText
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:tag="14"
                android:id="@+id/editTextQ14"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:gravity="center">

            <TextView
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="TOTAL"
                android:longClickable="true"/>

            <TextView
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="___"
                android:id="@+id/textViewTotal"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:gravity="center">


            <ImageButton
                android:src="@drawable/cooltext_button_calculate"
                android:contentDescription="Calculate"
                android:layout_width="120dp"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonCalculate"
                />

            <ImageButton
                android:src="@drawable/cooltext_button_clear"
                android:layout_width="120dp"
                android:contentDescription="Clear"
                android:background="@android:color/transparent"

                android:layout_height="wrap_content"
                android:id="@+id/buttonClear"
                />


        </LinearLayout>

        <WebView
            android:layout_width="wrap_content"
            android:layout_height="5dp"

            android:id="@+id/webView"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please rank 0-4.\nFor Instructions see: \nhttp://www.fallpreventiontaskforce.org/pdf/BergBalanceScale.pdf"
            android:autoLink="all"
            android:linksClickable="true"

            />

    </LinearLayout>
</ScrollView>

